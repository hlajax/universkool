 <%= form_with(model: etablissement, local: true) do |form| %>
  <% if etablissement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(etablissement.errors.count, "error") %> prohibited this etablissement from being saved:</h2>

      <ul>
        <% etablissement.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
	<div class="row">
		<div class="col-lg-12 col-12 bg-white ze-pad">
			<div class="row">
				<div class="col-lg-6">
					<div class="row">
							  <div class="form-group col-lg-12">
    <%= form.label :nom %>
    <%= form.text_field :nom,class:"form-control" %>
  </div>

  <div class="form-group col-lg-12">
    <%= form.label :description %>
    <%= form.text_area :description,class:"form-control", cols: "50", rows: "30" %>
  </div>

  <div class="form-group col-lg-12">
    <%= form.label :profil %>
    <%= form.file_field :profil,class:"form-control" %>
  </div>

  <div class="form-group col-lg-12">
    <%= form.label :cover %>
    <%= form.file_field :cover,class:"form-control" %>
  </div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="row">
						  <div class="form-group col-lg-6">
    <%= form.label :telephone %>
    <%= form.text_field :telephone,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6">
    <%= form.label :email %>
    <%= form.text_field :email,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6">
    <%= form.label :site %>
    <%= form.text_field :site,class:"form-control" %>
  </div>

  <div class="form-group col-lg-6">
    <%= form.label :adresse%>
    <%= form.text_field :adresse,class:"form-control"  %>
  </div>
   
 <div class="form-group col-lg-6">
    <%= form.label :photos%>
    <%= form.file_field :photos, multiple: true %>
</div>
 
 
  <div class="form-group col-lg-6">
    <%= form.label :pays %>
    <%= form.collection_select :country_id, Country.all, :id, :nom, {prompt:"Sélectionnez un pays"}, class:"form-control" %>
  </div>

  <div class="form-group col-lg-6">
    <%= form.label :categorie %>
    <%= form.collection_select :category_id, Category.all, :id, :titre, {prompt:"Sélectionnez une catégorie"},class:"form-control" %>
  </div>
  
  


  <div class="form-group col-lg-12">
    <%= form.submit "Ajouter l'établissement", class:"btn btn-success" %>
  </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



<% end %>