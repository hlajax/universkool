<%=render 'menus/main'%>
<div class="container-fluid bg-head">
	<div class="row">
	      <div class="col-lg-8 offset-lg-2 col-12 text-center ze-pad-big">
	      	      <h1 class="text-bold text-maj text-white entete">les établissements</h1>
	      	      <h5 class="text-white">Trouvez rapidement un établissement</h5>
	      	       <%= search_form_for @q do |f| %>
                      <div class="row search-form m-top">
                      	<div class="form-group col-lg-9 col-12">
                      	         <%= f.search_field :description_or_nom_cont, class:"form-control", placeholder:"saisissez un nom d'établissement ou un type de formation" %>
                        </div>
                      	<div class="form-group col-lg-3 col-12">
                      		<%= f.submit "Trouver", class:"btn btn-appel form-control" %>
                      	</div>
                      </div>
                <% end %>
	      </div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-12 col-12 text-center m-top-mini">
			    <div class="row">
			    	   	      
			    	   	      	      		<%@etablissements.each do |etablissement|%>
			    	   	      	      		
		<div class=" col-lg-4 col-6">
				<figure class="snip1336">
 						<div class="cover" style="background: url('<%=etablissement.cover.url%>')no-repeat;background-size:cover;background-position:center;">
 							
 						</div>
  						
  						<figcaption>
      							<%=image_tag etablissement.profil.url,class:"profile"%>
    							<h2><%=etablissement.nom%><span><%=etablissement.country.nom%></span></h2>
    							<a href="<%=etablissement.site%>" class="follow d-none" target="_blank">Site Web</a>
    							<%=link_to "Informations", etablissement, class:"follow"%>
  						</figcaption>
					</figure>
		</div>
<%end%>
			    	   	      
			    </div>
		</div>

	</div>
</div>
<%if administrateur_signed_in?%>
<%= link_to 'New Etablissement', new_etablissement_path %>
<%else%>
<% end %>
<%=render 'footers/main-footer'%>