<%=render 'menus/main'%>
<div class="container-fluid" style="background:url('<%= @etablissement.cover.url%>')no-repeat;background-size:cover;background-position:center;height:300px;  box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
">
	<div class="row">
		<div class="col-lg-2 m-top-big">
			<%=image_tag @etablissement.profil.url, class:"img-fluid logo"%>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-lg-10 offset-1 col-12  m-top bg-white ze-pad">
			<h2 class="text-maj text-bold"><%= @etablissement.nom %></h2>
			<h5 class="text-maj text-bold m-top">informations</h5>
			<hr>
			<div class="row">
				<div class="col-lg-4 col-12">
				      <h5><i class="fas fa-phone-square-alt"></i> <%= @etablissement.telephone %></h5>
				</div>
			<div class="col-lg-4 col-12">
			       <h5><i class="fas fa-envelope"></i> <%= @etablissement.email %></h5>
			</div>
			<div class="col-lg-4 col-12">
			        <h5><i class="fas fa-globe-africa"></i> <%= @etablissement.site %></h5>
			</div>
			<div class="col-lg-4 col-12 m-top-mini">
			        <h5><i class="fas fa-map-marker-alt"></i> <%= @etablissement.adresse %></h5>
			</div>
			<div class="col-lg-4 col-12 m-top-mini">
			        <h5><i class="fas fa-flag"></i> <%= @etablissement.country.nom %></h5>
			</div>
			<div class="col-lg-4 col-12 m-top-mini">
			         <h5><i class="fas fa-archive"></i> <%= @etablissement.category.titre %></h5>
			 </div>
			</div>
			<hr>
			<a href="tel: <%= @etablissement.telephone %>" class="btn btn-appel btn-lg text-maj text-bold"><i class="fas fa-phone-square-alt"></i> Appeler</a>
			<a href="mailto: <%= @etablissement.email %>" class="btn btn-mail btn-lg text-maj text-bold"><i class="fas fa-envelope"></i> Envoyer un email</a>
			<a href="<%= @etablissement.site %>" class="btn btn-site btn-lg text-maj text-bold"><i class="fas fa-globe-africa"></i> Visiter le site web</a>
		</div>
		<div class="col-lg-10 offset-1 col-12  m-top bg-white ze-pad">
			<h4 class="text-maj text-bold m-top">description</h4>
			<hr>
			<p><%= @etablissement.description %></p>
		</div>
	</div>
	<div class="row">
			    	   	      
			    	   	      	      		<%@etablissements_similaires.each do |etablissement|%>
			    	   	      	      		
		<div class=" col-lg-4 col-12">
				<figure class="snip1336">
 						<div class="cover" style="background: url('<%=etablissement.cover.url%>')no-repeat;background-size:cover;background-position:center;">
 							
 						</div>
  						
  						<figcaption>
      							<%=image_tag etablissement.profil.url,class:"profile"%>
    							<h2><%=etablissement.nom%><span><%=etablissement.country.nom%></span></h2>
    							<a href="<%=etablissement.site%>" class="follow" target="_blank">Site Web</a>
    							<%=link_to "Informations", etablissement, class:"info"%>
  						</figcaption>
					</figure>
		</div>
<%end%>
			    	   	      
			    </div>
</div>
<%if administrateur_signed_in?%>
<%= link_to 'Edit', edit_etablissement_path(@etablissement) %> |
<%= link_to 'Back', etablissements_path %>
<%else%>
<%end%>
